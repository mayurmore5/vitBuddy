{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", // Updated to work with 'bundler' module resolution
    "strict": true,
    "jsx": "react-native",
    "lib": [
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Ensures TypeScript only checks types, doesn't emit JS
    "isolatedModules": true // Ensures each file can be compiled independently
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts" // Keep this if you are using NativeWind
  ],
  "exclude": [
    "node_modules"
  ]
}